<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="136dp" />

    <TextView
            android:id="@+id/textViewMinutes"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="?android:attr/detailsElementBackground"
            android:gravity="center_horizontal|center_vertical"
            android:text="00:min"
            android:textColor="#189C1E"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textViewSecond"
            android:layout_marginBottom="350dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
            android:id="@+id/textViewSecond"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="?android:attr/detailsElementBackground"
            android:gravity="center_horizontal|center_vertical"
            android:text="00:sec"
            android:textColor="#189C1E"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textViewMinutes"
            android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textViewMinutes" />

    <TextView
            android:text="TIMER"
            android:layout_width="168dp"
            android:layout_height="59dp"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp"
            android:textSize="34sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintHorizontal_bias="0.625" />

    <TextView
            android:id="@+id/showTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#189C1E"
            android:textSize="48sp"
            android:textStyle="bold"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/start"
            android:layout_marginBottom="32dp" />


</androidx.constraintlayout.widget.ConstraintLayout>