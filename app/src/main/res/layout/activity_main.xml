<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/background">

    <!--TODO:     Start- menak knopkena mnum aranc mej@ graci..-->
    <!--TODO:          Min u sec - amboxjutyamb komponent em sarqum...
                daj@ karelia imageButton sarqel berel sirun dnel...meak chi hatvum-->


    <Button
            android:id="@+id/startButton"
            android:text="Start"
            android:layout_width="383dp"
            android:layout_height="68dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="48dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/button_text"
            tools:ignore="SpeakableTextPresentCheck"
            android:background="@drawable/button"
            android:visibility="visible"/>

    <Button
            android:id="@+id/pauseButton"
            android:text="PAUSE"
            android:layout_width="383dp"
            android:layout_height="68dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="48dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/button_text"
            tools:ignore="SpeakableTextPresentCheck"
            android:background="@drawable/button"
            android:visibility="invisible" />

    <Button
            android:id="@+id/playButton"
            android:text="PLAY"
            android:layout_width="383dp"
            android:layout_height="68dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="48dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/button_text"
            tools:ignore="SpeakableTextPresentCheck"
            android:background="@drawable/button"
            android:visibility="invisible" />

    <TextView
            android:id="@+id/textViewMinutes"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:text="00"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="210dp"
            android:visibility="visible" />

    <TextView
            android:id="@+id/textViewSecond"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:text="00"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="210dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            android:visibility="visible" />


    <TextView
            android:id="@+id/showTextView"
            android:layout_width="173dp"
            android:layout_height="125dp"
            android:text="00"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="415dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="110dp"
            android:visibility="visible" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mask_group"
            android:id="@+id/stopImageButton"
            android:backgroundTintMode="multiply"
            android:backgroundTint="#01071D"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="136dp" />

    <ImageView
            android:layout_width="351dp"
            android:layout_height="52dp"
            app:srcCompat="@drawable/under_numbers"
            android:id="@+id/under_numbers"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="176dp"
            android:layout_marginStart="28dp" />


</androidx.constraintlayout.widget.ConstraintLayout>